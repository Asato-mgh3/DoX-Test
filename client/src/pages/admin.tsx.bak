  // å‚è€ƒæ›¸ã‚’å±•é–‹ã—ãŸã¨ãã«ç« ãƒ‡ãƒ¼ã‚¿ã‚’å–å¾—
  const fetchChapters = async () => {
    if (chapters.length > 0) return; // æ—¢ã«å–å¾—æ¸ˆã¿ãªã‚‰ã‚¹ã‚­ãƒƒãƒ—
    
    setLoadingChapters(true);
    try {
      const response = await axios.get(`/api/chapters?textbookIds=${book.bookId}`);
      
      // ç« ã‚’orderï¼ˆé †ç•ªï¼‰ã§ã‚½ãƒ¼ãƒˆ
      const sortedChapters = [...response.data].sort((a, b) => {
        // orderãƒ—ãƒ­ãƒ‘ãƒ†ã‚£ãŒã‚ã‚‹å ´åˆã¯ãã‚Œã§ã‚½ãƒ¼ãƒˆ
        if (a.order !== undefined && b.order !== undefined) {
